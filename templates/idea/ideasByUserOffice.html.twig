{% extends 'base.html.twig' %}

{% block title %}Idées de l'agence de l'utilisateur{% endblock %}

{% block body %}
<main class="container" {{ stimulus_controller('symfony/ux-swup/swup') }} id="swup" data-turbo="false">
    <div>
        <h1 class="mt-3 text-center">
            SalesForce Idéation test de commit et push
        </h1>
    </div>

    <div class="container my-5">
        <div class="d-flex justify-content-between">
            <h3>
                Les idées de mon agence de {{user.workplace.location}}
            </h3>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle text-white" type="button" id="sortingDropdown"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Trier les idées par
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortingDropdown">
                    <li><a class="dropdown-item" href="{{ path('ideas_by_user_office') }}">Dates récentes</a></li>
                    <li><a class="dropdown-item" href="{{ path('idea_sorting_off', {'order': 'asc', 'page': 1}) }}">Dates anciennes</a></li>
                    <li><a class="dropdown-item" href="{{ path('idea_sorting_supp_off', {'page': 1}) }}">Popularité</a></li>
                </ul>
            </div>
        </div>
        <hr class="border-2 border-secondary opacity-50">
        <div class="row row-cols-1 row-cols-md-2 justify-content-center row-cols-xl-3 g-2 mx-2">
            {% for idea in ideas %}
            <div class="col">
                <div class="card h-100 shadow-lg p-2">
                    <div class="card-body  d-flex flex-column">
                        <h3 class="card-title fs-2">{{ idea.title|u.truncate(13, '...', false) }}</h3>
                        <p>{{ idea.content|striptags|u.truncate(100, '...', false) |raw }}</p>
                        <div class="d-flex justify-content-end  mt-auto p-2">
                            <h6 class="card-title ms-2 text-info">{{ idea.publicationDate|date("d/m/Y") }} </h6>
                        </div>
                        <div class="d-flex justify-content-between mt-auto">
                            <div class="d-flex align-items-center">
                                {% if idea.pictureFileName %}
                                <img src="{{ asset('/uploads/profiles_pictures/' ~ idea.pictureFileName)}}"
                                    alt="profile picture" class="profile-picture-idea img-fluid rounded-circle">
                                {% else %}
                                <img src="{{ asset('build/images/blank-profil-picture.png' )}}" alt="profile picture"
                                    class="profile-picture-idea img-fluid rounded-circle">
                                {% endif %}
                                <h6 class="m-0 ms-1">
                                    {{ idea.firstname }} {{ idea.lastname}}
                                </h6>
                            </div>
                            <a href="{{ path('idea_show', {id:idea.id}) }}" class="mx-3 btn btn-primary text-white">
                                Voir l'idée</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="d-flex justify-content-center my-2">
        {{ pagerfanta(ideas, 'twitter_bootstrap5') }}
    </div>
</main>
{% endblock %}